    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "env": {},
            "envFile": "${workspaceFolder}/.env",
            "debugger_type": "auto",
            "python": "${config:pythonPath}",
            "debugOptions": [
                "RedirectOutput"
            ]
          },
          {
            "name": "Django and Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:8000/tabela_dados/",
            "webRoot": "${workspaceFolder}"    

          }
    ]
}